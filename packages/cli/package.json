{
  "name": "@dash4/cli",
  "version": "0.5.0",
  "private": false,
  "description": "dash4 cli",
  "repository": "https://github.com/smollweide/dash4",
  "license": "MIT",
  "author": "Simon Mollweide<simon.mollweide@gmail.com>",
  "files": [
    "bin",
    "build",
    "LICENSE",
    "README.md"
  ],
  "main": "./build/index.js",
  "typings": "./build/index.d.ts",
  "bin": {
    "dash4-cli": "./bin/index.js"
  },
  "scripts": {
    "build": "npm run build:build",
    "build:build": "tsc --project tsconfig.server.json --outDir build",
    "test": "npm-run-all test:*",
    "test-update-snapshots:server": "jest --coverage --update-snapshot --config=jest.server.config.js",
    "test:server": "jest --coverage --config=jest.server.config.js",
    "watch-build": "tsc --project tsconfig.server.json --watch --outDir build",
    "watch-test": "jest --coverage --watchAll --notify --config=jest.server.config.js"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "dependencies": {
    "@dash4/log": "0.5.0",
    "@namics/prettier-config": "0.2.0",
    "chalk": "2.4.2",
    "commander": "2.20.0",
    "execa": "1.0.0",
    "fs-extra": "8.0.1",
    "glob": "7.1.4",
    "make-dir": "3.0.0",
    "prettier": "1.18.2",
    "read-pkg": "5.1.1",
    "tslib": "1.9.3",
    "write-pkg": "4.0.0"
  },
  "devDependencies": {
    "@dash4/config": "0.5.0",
    "@namics/ts-config": "0.3.0",
    "@types/execa": "0.9.0",
    "@types/glob": "7.1.1",
    "@types/jest": "24.0.13",
    "@types/prettier": "1.16.4",
    "@types/read-pkg": "4.0.0",
    "@types/write-pkg": "3.1.0",
    "cpy": "7.2.0",
    "del": "4.1.1",
    "jest": "24.8.0",
    "npm-run-all": "4.1.5",
    "ts-jest": "24.0.2",
    "typescript": "3.5.1"
  }
}